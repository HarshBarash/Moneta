<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dialog_rounded_bg"
        android:minWidth="350dp"
        android:minHeight="350dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <ImageButton
                android:id="@+id/backspace"
                android:layout_marginLeft="5dp"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/ic_baseline_keyboard_green_backspace_36"
                tools:ignore="MissingConstraints" />

            <TextView
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/playfair_display_bold"
                android:layout_marginTop="10dp"
                android:layout_marginStart="-30dp"
                android:gravity="center"
                android:text="Материал"
                android:textColor="@color/black"
                android:textSize="60sp" />

        </LinearLayout>

        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/playfair_display"
            android:gravity="center"
            android:text="Белый металл"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="28sp"
            tools:ignore="RtlCompat" />

        <ImageView
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:background="@drawable/white"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:paddingTop="10dp"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/playfair_display"
            android:gravity="center"
            android:text="Желтый металл"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp"
            tools:ignore="RtlCompat" />

        <ImageView
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:background="@drawable/yeelow"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:paddingTop="10dp"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/playfair_display"
            android:gravity="center"
            android:text="Более подробная информация в 'Расширенные настройки'"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            tools:ignore="RtlCompat" />


    </LinearLayout>
</ScrollView>