<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="harshbarash.github.monetaru">

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>


    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">

        <activity android:name=".FollowerActivity" />
        <activity
            android:name=".UpdatePhoto"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".SendImage"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".MessageActivity"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".YourCoins"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Related"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".RequestShow"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CoinsActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />

        <activity android:name=".ClassifierActivity"/>
        <activity android:name=".MainActivity"/>
        <activity android:name=".CollectionActivity" android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".DefineActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".ImageActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".PrivacyActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".UpdateProfile"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CreateProfile"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".RegisterActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ShowUser"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".LoginActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Splashscreen"
            android:theme="@style/SplashTheme"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <provider
            android:authorities="harshbarash.github.monetaru"
            android:name="harshbarash.github.monetaru.Provider"
            android:exported="false"/>
    </application>

</manifest>