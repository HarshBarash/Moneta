<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/MoneyGreen"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="80dp"
        android:minHeight="550dp"
        android:layout_marginBottom="150dp"
        android:layout_marginRight="10dp"
        android:elevation="10dp"
        app:cardCornerRadius="50dp">


        <ImageButton
            android:id="@+id/ib_menu_f1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_baseline_settings_36" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:text="Профиль"
            android:textColor="@color/textcolorgrey"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/ib_edit_f1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="20dp"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:src="@drawable/ic_baseline_edit_36" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="75dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="121dp"
                android:layout_height="121dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/iv_f1"
                android:src="@drawable/ic_person"
                android:clickable="true"/>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name_f1"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:gravity="start"
                    android:hint="Имя"
                    android:paddingStart="10dp"
                    android:paddingLeft="10dp"
                    android:textAlignment="viewStart"
                    android:textColor="@android:color/black"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/tv_bio_f1"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:gravity="start"
                    android:hint="Город"
                    android:paddingStart="10dp"
                    android:paddingLeft="10dp"
                    android:textAlignment="viewStart"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="15sp" />

            </LinearLayout>

        </LinearLayout>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="220dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/tv_followers_f1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="230dp"
            android:layout_marginRight="75dp"
            android:clickable="true"
            android:drawableTop="@drawable/ic_baseline_people_48"
            android:text="Подписчики"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tv_post_f1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="300dp"
            android:clickable="true"
            android:drawableTop="@drawable/ic_coinacc"
            android:gravity="center"
            android:text="Лоты"
            android:textColor="@android:color/black" />


        <TextView
            android:id="@+id/tv_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="230dp"
            android:clickable="true"
            android:drawableTop="@drawable/ic_baseline_queue_48"
            android:gravity="center"
            android:text="Запросы"
            android:textColor="@android:color/black" />


    </androidx.cardview.widget.CardView>

</LinearLayout>