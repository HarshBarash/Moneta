<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:padding="4dp"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="10dp"
        android:elevation="10dp"
        app:cardCornerRadius="50dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="top|center_horizontal"
        android:textSize="30sp"
        android:textColor="@android:color/black"
        android:id="@+id/tv_record_status"
        android:fontFamily="@font/playfair_display"
        android:text="Аудиодорожка"
        android:textAlignment="center"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Старт"
        android:layout_marginTop="80dp"
        android:layout_gravity="top|center_horizontal"
        android:background="@drawable/button_moneygreen"
        android:textColor="@android:color/white"
        android:textSize="23sp"
        android:id="@+id/btn_start_rc"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Стоп"
        android:background="@drawable/redbtn"
        android:textColor="@android:color/white"
        android:textSize="23sp"
        android:layout_marginTop="150dp"
        android:layout_gravity="top|center_horizontal"
        android:id="@+id/btn_stop_rc"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Отправить"
        android:background="@drawable/button_moneygreen"
        android:textColor="@android:color/white"
        android:textSize="23sp"
        android:layout_marginTop="220dp"
        android:layout_gravity="top|center_horizontal"
        android:id="@+id/btn_send_rc"/>


    </androidx.cardview.widget.CardView>

</LinearLayout>